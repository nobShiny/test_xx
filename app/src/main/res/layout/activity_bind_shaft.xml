<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/theme_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/theme_color">
        <include layout="@layout/layout_back"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            style="@style/bind_item_textview_title_style"
            android:text="机井坐标：" />

        <EditText
            android:id="@+id/et_coordinate"
            style="@style/bind_item_edittext_text_style"
            android:hint="输入坐标" />

        <View
            style="@style/bind_item_view_style"/>

        <TextView
            style="@style/bind_item_textview_title_style"
            android:text="机井编号：" />

        <EditText
            android:id="@+id/et_number"
            style="@style/bind_item_edittext_text_style"
            android:hint="6位编号" />

        <View
            style="@style/bind_item_view_style" />

        <TextView
            style="@style/bind_item_textview_title_style"
            android:text="所有者姓名：" />

        <EditText
            android:id="@+id/et_name"
            style="@style/bind_item_edittext_text_style"
            android:hint="姓名" />

        <View
            style="@style/bind_item_view_style" />

        <TextView
            style="@style/bind_item_textview_title_style"
            android:text="所有者身份证号：" />

        <EditText
            android:id="@+id/et_id"
            style="@style/bind_item_edittext_text_style"
            android:hint="18位身份证号" />

        <View
            style="@style/bind_item_view_style" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="确认" />
</LinearLayout>