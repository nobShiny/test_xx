<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_map_window_name"
            style="@style/map_window_text_title_style"
            tools:text="1#机井" />

        <LinearLayout style="@style/map_window_layout_style">

            <TextView
                style="@style/map_window_text_shadow_style"
                android:text="机井状态" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_map_window_state"
                style="@style/map_window_text_shadow_style"
                tools:text="开启" />
        </LinearLayout>

        <LinearLayout style="@style/map_window_layout_style">

            <TextView
                style="@style/map_window_text_style"
                android:text="管理员" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_map_window_administrator"
                style="@style/map_window_text_style"
                tools:text="xxx" />
        </LinearLayout>

        <LinearLayout style="@style/map_window_layout_style">

            <TextView
                style="@style/map_window_text_shadow_style"
                android:text="联系电话" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_map_window_phone_number"
                style="@style/map_window_text_shadow_style"
                tools:text="xxxx" />
        </LinearLayout>

        <LinearLayout style="@style/map_window_layout_style">

            <TextView
                style="@style/map_window_text_style"
                android:text="井深" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_map_window_deep"
                style="@style/map_window_text_style"
                tools:text="xxx" />
        </LinearLayout>

        <LinearLayout style="@style/map_window_layout_style">

            <TextView
                style="@style/map_window_text_shadow_style"
                android:text="机井口径" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_map_window_size"
                style="@style/map_window_text_shadow_style"
                tools:text="xxxx" />
        </LinearLayout>

        <LinearLayout style="@style/map_window_layout_style">

            <TextView
                style="@style/map_window_text_style"
                android:text="配水额度" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_map_window_sum"
                style="@style/map_window_text_style"
                tools:text="xxx" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>