<?xml version="1.0" encoding="utf-8"?>
<com.zte.topsky.home.customui.homeScrollView.ViewWithSign xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background_color"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="目录"
        android:textColor="@color/home_action_text_color"
        android:textSize="18sp" />

</com.zte.topsky.home.customui.homeScrollView.ViewWithSign>