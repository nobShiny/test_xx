<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_back" />

    <LinearLayout
        android:id="@+id/ll_rain_list"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/window_background_gradient_start_color"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rain_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2016-11-05è‡³2016-12-09"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_rian_list_indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_show_list_down" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/map_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>