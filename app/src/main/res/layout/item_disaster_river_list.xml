<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout style="@style/emergency_contract_item_style">

            <TextView
                android:id="@+id/tv_river_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/listTextColor"
                tools:text="sss"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_river_current_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/listTextColor"
                tools:text="sss"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_river_alert_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/listTextColor"
                tools:text="sss"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_river_critical_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/listTextColor"
                tools:text="sss"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="36dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_river_flow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/listTextColor"
                tools:text="sss"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>